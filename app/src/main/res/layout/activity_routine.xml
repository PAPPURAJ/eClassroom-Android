<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".RoutineActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/transparent_bg"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/app_logo"
        android:layout_margin="20dp"
        android:layout_gravity="left|top"/>
    <TextView
        android:id="@+id/routine_dayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="17dp"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="130dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"/>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="100dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/routine_sunBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Sun"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                    <Button
                        android:id="@+id/routine_monBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Mon"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                    <Button
                        android:id="@+id/routine_tueBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Tue"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                    <Button
                        android:id="@+id/routine_wedBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Wed"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                    <Button
                        android:id="@+id/routine_thusSunBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Thus"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                    <Button
                        android:id="@+id/routine_friBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Fri"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                    <Button
                        android:id="@+id/routine_satBtn"
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:text="Sat"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_back"/>


                </LinearLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/routine_subRecy"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/routine_plusFlb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:src="@drawable/plus"
        android:layout_margin="20dp"/>




</androidx.coordinatorlayout.widget.CoordinatorLayout>